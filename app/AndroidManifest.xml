<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.dailyefforts.android.reviwer"
    android:versionCode="2"
    android:versionName="1.5.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gmail.dailyefforts.android.reviwer.Launcher"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gmail.dailyefforts.android.reviwer.test.TestPage"
            android:label="@string/label_accracy"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme.TranslucentActionBar" >
        </activity>
        <activity
            android:name="com.gmail.dailyefforts.android.reviwer.setting.SettingsActivity"
            android:label="@string/settings" >
        </activity>
        <activity
            android:name="com.gmail.dailyefforts.android.reviwer.book.WordBookActivity"
            android:label="@string/label_word_book" >
        </activity>

        <provider
            android:name="com.gmail.dailyefforts.android.reviwer.db.DbProvider"
            android:authorities="com.gmail.dailyefforts.android.reviwer"
            android:exported="false" >
        </provider>

        <service
            android:name="com.gmail.dailyefforts.android.reviwer.service.VersionChecker"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.gmail.dailyefforts.android.reviwer.CheckVersion" />
            </intent-filter>
        </service>

        <activity
            android:name="com.gmail.dailyefforts.android.reviwer.version.UpdatePrompt"
            android:label="@string/title_activity_update_prompt"
            android:theme="@style/Activity.Dialog" >
        </activity>
    </application>

</manifest>