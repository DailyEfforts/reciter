<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.dailyefforts.android.reviwer"
    android:versionCode="28"
    android:versionName="2.5(Beta)" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gmail.dailyefforts.android.reciter.test.SelectionTestActivity"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gmail.dailyefforts.android.reciter.setting.SettingsActivity"
            android:label="@string/settings" >
        </activity>

        <provider
            android:name="com.gmail.dailyefforts.android.reciter.db.WordListProvider"
            android:authorities="com.gmail.dailyefforts.android.reciter.wordlist"
            android:exported="false" >
        </provider>
        <provider
            android:name="com.gmail.dailyefforts.android.reciter.db.TestReportsProvider"
            android:authorities="com.gmail.dailyefforts.android.reciter.testreport"
            android:exported="false" >
        </provider>

        <service
            android:name="com.gmail.dailyefforts.android.reciter.version.VersionChecker"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.gmail.dailyefforts.android.reciter.CheckVersion" />
            </intent-filter>
        </service>

        <activity
            android:name="com.gmail.dailyefforts.android.reciter.version.UpdateConfirm"
            android:label=""
            android:theme="@style/ActivityTheme.Translucent" >
        </activity>
        <activity
            android:name="com.gmail.dailyefforts.android.reciter.Sessions"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name="com.gmail.dailyefforts.android.reciter.receiver.BootReciver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.gmail.dailyefforts.android.reciter.receiver.ReviewReciver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.gmail.dailyefforts.android.reciter.review" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.gmail.dailyefforts.android.reciter.test.drag.DragAndDropTestActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.gmail.dailyefforts.android.reciter.version.DownloadConfirm" >
        </activity>
        <activity
            android:name="com.gmail.dailyefforts.android.reciter.Launcher"
            android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.gmail.dailyefforts.android.reciter.widget.CountdownTimerWidgetProvider"
            android:label="@string/countdown_timer" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/countdown_timer_widget_info" />
        </receiver>

        <activity
            android:name="com.gmail.dailyefforts.android.reciter.test.CompletionTestActivity"
            android:label="" >
        </activity>
        <activity
            android:name="com.gmail.dailyefforts.android.reciter.setting.AnnounceActivity"
            android:exported="false"
            android:label="@string/announce" >
            <intent-filter>
                <action android:name="com.gmail.dailyefforts.android.reciter.LAUNCH_ANNOUNCE_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>