<?xml version="1.0" encoding="utf-8"?>
<com.gmail.dailyefforts.reciter.unit.UnitView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"
    android:layout_marginTop="9dp"
    android:background="@drawable/btn_dark_bg" >

    <TextView
        android:id="@+id/unit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/unit_id"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorPrimary"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/unit_contents_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/unit_id"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="9dp"
        android:layout_marginTop="6dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textIsSelectable="false"
        android:textSize="9dp" />

    <ImageView
        android:id="@+id/unit_status"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/presence_away" />

</com.gmail.dailyefforts.reciter.unit.UnitView>