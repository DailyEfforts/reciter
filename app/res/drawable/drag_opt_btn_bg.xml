<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/holo_blue_light_half_transparent" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- left shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerColor="@color/transparent"
                android:centerX="0.02"
                android:endColor="@color/transparent"
                android:startColor="@color/gray" />

            <corners android:radius="2dp" />
        </shape>
        <!-- bottom shadow -->
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="@color/transparent"
                android:centerX="0.02"
                android:endColor="@color/transparent"
                android:startColor="@color/gray" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- right shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="@color/transparent"
                android:centerX="0.02"
                android:endColor="@color/transparent"
                android:startColor="@color/gray" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- top shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerColor="@color/transparent"
                android:centerX="0.02"
                android:endColor="@color/transparent"
                android:startColor="@color/gray" />

            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>