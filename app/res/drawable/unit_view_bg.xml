<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="#99CC00" />
			<corners android:radius="2dp" />

			<padding android:bottom="1dp" android:left="1dp"
				android:right="1dp" android:top="1dp" />

			<stroke android:dashGap="1dp" android:dashWidth="1dp"
				android:width="1dp" android:color="#FF000000" />

			<size android:height="60dip" />

		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<solid android:color="#094AB2" />
			<corners android:radius="2dp" />

			<padding android:bottom="1dp" android:left="1dp"
				android:right="1dp" android:top="1dp" />

			<size android:height="60dip" />

		</shape>
	</item>

</selector>