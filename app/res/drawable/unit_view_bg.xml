<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#08D7FF" />

            <corners android:radius="@dimen/radius_unit_view_corner" />

            <padding android:bottom="@dimen/padding_unit_view" android:left="@dimen/padding_unit_view" android:right="@dimen/padding_unit_view" android:top="@dimen/padding_unit_view" />

            <stroke android:dashGap="1dp" android:dashWidth="1dp" android:width="1dp" android:color="@color/black" />

            <size android:height="@dimen/height_unit_view" />
        </shape></item>
    <item><shape android:shape="rectangle">

<!--             <gradient android:endColor="@color/transparent" android:gradientRadius="150" android:startColor="@color/green" android:type="sweep" /> -->
            <solid android:color="@color/dark" />

            <corners android:radius="@dimen/radius_unit_view_corner" />

            <padding android:bottom="@dimen/padding_unit_view" android:left="@dimen/padding_unit_view" android:right="@dimen/padding_unit_view" android:top="@dimen/padding_unit_view" />

            <size android:height="@dimen/height_unit_view" />

            <stroke android:dashGap="@dimen/dash_gap" android:dashWidth="1dp" android:width="1dp" android:color="@color/green" />
        </shape></item>

</selector>