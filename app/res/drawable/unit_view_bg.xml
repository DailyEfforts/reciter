<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="#99CC00" />

			<corners android:radius="@dimen/radius_unit_view_corner" />

			<padding android:bottom="@dimen/padding_unit_view"
				android:left="@dimen/padding_unit_view" android:right="@dimen/padding_unit_view"
				android:top="@dimen/padding_unit_view" />

			<stroke android:dashGap="1dp" android:dashWidth="1dp"
				android:width="1dp" android:color="#FF000000" />

			<size android:height="@dimen/height_unit_view" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/blue" />

			<corners android:radius="@dimen/radius_unit_view_corner" />

			<padding android:bottom="@dimen/padding_unit_view"
				android:left="@dimen/padding_unit_view" android:right="@dimen/padding_unit_view"
				android:top="@dimen/padding_unit_view" />

			<size android:height="@dimen/height_unit_view" />

			<stroke android:width="@dimen/width_unit_view_stroke"
				android:color="@color/gray" />
		</shape>
	</item>

</selector>